<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreferencesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:layout_weight="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="환경설정"
                android:textStyle="bold"
                android:textSize="36dp"
                android:textColor="#000000"
                android:gravity="left|center_vertical"
                android:paddingLeft="30dp"
                android:layout_weight="2"
                android:layout_marginTop="40dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  #더 많은 서비스가 당신을 위하여 준비 중입니다!"
                android:textStyle="italic"
                android:textSize="18dp"
                android:textColor="#000000"
                android:gravity="left|center_vertical"
                android:paddingLeft="30dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="520dp"
            android:orientation="vertical"
            android:background="#dcdcdc"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/window_list"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="4"
            android:background="#ffffff"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pre_homeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:drawableTop="@drawable/ic_home_black_24dp"
                android:text="홈" />

            <Button
                android:id="@+id/pre_add_AnyFarm_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:drawableTop="@drawable/ic_home_black_24dp"
                android:text="화분등록" />

            <Button
                android:id="@+id/pre_monitorButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:drawableTop="@drawable/ic_video_label_black_24dp"
                android:text="모니터링" />

            <Button
                android:id="@+id/pre_windowsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:drawableTop="@drawable/ic_build_black_24dp"
                android:text="환경설정" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>